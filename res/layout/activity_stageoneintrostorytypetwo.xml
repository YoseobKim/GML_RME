<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stageoneintrotypetwo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".StageOneIntroStoryActivityTypeTwo" >
    
     <ImageView
        android:id="@+id/stage1_1_intro_bg"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/nodesc"
        android:src="@drawable/stage1_intro_2" />
     <ImageView
        android:id="@+id/stage1_1_intro_bg_black"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:contentDescription="@string/nodesc"
        android:src="@drawable/blackscreen" />
    
    <ImageView
        android:id="@+id/stage1_1_mainChar_1"
        android:layout_width="580dp"
        android:layout_height="420dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="600dp"
        android:layout_marginTop="250dp"
        android:contentDescription="@string/nodesc"
        android:src="@drawable/family" />
    
    <RelativeLayout 
        android:id="@+id/stage1_1_event_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    	
    	<ImageView
        	android:id="@+id/stage1_1_event_Char"
        	android:layout_width="250dp"
        	android:layout_height="420dp"
        	android:layout_marginTop="250dp"
        	android:scaleType="fitXY"
        	android:contentDescription="@string/nodesc"
        	android:src="@drawable/stage1_girl" />
    	<ImageView
        	android:id="@+id/stage1_1_event_rullet_board"
        	android:layout_width="250dp"
        	android:layout_height="420dp"
        	android:layout_marginTop="250dp"
        	android:layout_marginLeft="250dp"
        	android:scaleType="fitXY"
        	android:contentDescription="@string/nodesc"
        	android:src="@drawable/stage1_rullet_board" />
    	
    	<LinearLayout
        	android:id="@+id/stage1_1_event_textbubble1"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignParentTop="true"
        	android:layout_alignLeft="@id/stage1_1_event_Char"
        	android:layout_marginTop="100dp"
        	android:layout_marginLeft="100dp"
        	android:background="@drawable/textbubble"
        	android:orientation="vertical" 
        	android:visibility="invisible">
        	
        	<TextView 
            	android:id="@+id/stage1_1_event_textview1"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:gravity="center"
            	android:padding="20dp"
            	android:text="@string/stage1_1_dialog_3"
            	android:textColor="#FF000000"
            	android:textSize="30sp"/>
        
    	</LinearLayout>
        
    </RelativeLayout>
    
    <ImageButton
        android:id="@+id/stage1_1_next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1150dp"
        android:layout_marginTop="650dp"
        android:background="@drawable/next_btn"
        android:contentDescription="@string/nodesc" />
    
    <LinearLayout
        android:id="@+id/stage1_1_textbubble1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/stage1_1_mainChar_1"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/textbubble"
        android:orientation="vertical"
        android:visibility="invisible" >
        <TextView 
            android:id="@+id/stage1_1_textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/stage1_1_dialog_1"
            android:textColor="#FF000000"
            android:textSize="30sp"/>
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/stage1_1_textbubble2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/stage1_1_mainChar_1"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="250dp"
        android:background="@drawable/textbubble"
        android:orientation="vertical"
        android:visibility="invisible" >
        <TextView 
            android:id="@+id/stage1_1_textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/stage1_1_dialog_1"
            android:textColor="#FF000000"
            android:textSize="30sp"/>
        
    </LinearLayout>
    

</RelativeLayout>