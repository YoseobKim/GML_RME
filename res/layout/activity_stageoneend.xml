<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stageoneend"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StageOneEndActivity" >

    <ImageView
        android:id="@+id/stage1_end_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/nodesc"
        android:scaleType="fitXY"
        android:src="@drawable/stage1_end" />

    <ImageView
        android:id="@+id/stage1_end_black_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/nodesc"
        android:scaleType="fitXY"
        android:src="@drawable/blackscreen" />

    <ImageButton
        android:id="@+id/stage1_end_next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1150dp"
        android:layout_marginTop="650dp"
        android:background="@drawable/next_btn"
        android:contentDescription="@string/nodesc" />
    
    <ImageView
            android:id="@+id/stage1_end_Char"
            android:layout_width="300dp"
            android:layout_height="420dp"
            android:layout_marginLeft="400dp"
            android:layout_marginTop="250dp"
            android:contentDescription="@string/nodesc"
            android:scaleType="fitXY"
            android:src="@drawable/maincharacter_smile" />

    <LinearLayout
        android:id="@+id/stage1_end_textbubble1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/stage1_end_Char"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="108dp"
        android:layout_marginTop="128dp"
        android:background="@drawable/textbubble"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView
            android:id="@+id/stage1_end_textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/stage1_end_dialog_1"
            android:textColor="#FF000000"
            android:textSize="30sp" />
    </LinearLayout>

</RelativeLayout>