<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stage1learnone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StageOneLearnActivityOne" >

    <ImageView
        android:id="@+id/stage1_learn_typeone_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/nodesc"
        android:scaleType="fitXY"
        android:src="@drawable/stage1_study_bg" />

    <ImageView
        android:id="@+id/stage1_learn_blackscreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/nodesc"
        android:scaleType="fitXY"
        android:src="@drawable/blackscreen" />

    <ImageView
        android:id="@+id/stage1_study1_mainChar_1"
        android:layout_width="480dp"
        android:layout_height="420dp"
        android:layout_marginLeft="550dp"
        android:layout_marginTop="250dp"
        android:contentDescription="@string/nodesc"
        android:scaleType="fitXY"
        android:src="@drawable/kidlearn" />

    <LinearLayout
        android:id="@+id/stage1_study1_textbubble1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/stage1_study1_mainChar_1"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/textbubble"
        android:orientation="vertical"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/stage1_study1_textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/stage1_study1_dialog_11"
            android:textColor="#FF000000"
            android:textSize="30sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/stage1_study1_learnLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" >

        <ImageView
            android:id="@+id/stage1_study1_learn_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/nodesc"
            android:scaleType="fitXY"
            android:src="@drawable/learn_bg" />

        <ImageView
            android:id="@+id/stage1_study1_learn_material"
            android:layout_width="1000dp"
            android:layout_height="300dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="100dp"
            android:contentDescription="@string/nodesc"
            android:src="@drawable/learn_material"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/stage1_study1_learn_material2"
            android:layout_width="1000dp"
            android:layout_height="500dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="100dp"
            android:contentDescription="@string/nodesc"
            android:src="@drawable/learn_material2"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/stage1_study1_learn_material3"
            android:layout_width="1000dp"
            android:layout_height="500dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="30dp"
            android:contentDescription="@string/nodesc"
            android:src="@drawable/learn_material3"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/stage1_study1_textbubble2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/textbubble"
            android:orientation="vertical"
            android:visibility="invisible" >

            <TextView
                android:id="@+id/stage1_study1_textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:text="@string/stage1_study1_dialog_15"
                android:textColor="#FF000000"
                android:textSize="30sp" />
        </LinearLayout>
    </RelativeLayout>

    <ImageButton
        android:id="@+id/stage1_study1_next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1150dp"
        android:layout_marginTop="650dp"
        android:background="@drawable/next_btn"
        android:contentDescription="@string/nodesc" />

</RelativeLayout>